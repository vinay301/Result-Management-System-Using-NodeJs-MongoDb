<!--Include header-->
<%- include('include/_header')%>
<!--/Include header-->

<div class="front">
<div class="container">
<h2 class="text-center mt-5 mb-5">Find Result</h2>
<form action="/api/students/searchResult" method="POST" id="searchStudent">
    <div class="add-student">

     <div class="form-group row">
         <label for="rollno" class="text-dark col-sm-2 col-form-label">Roll No.</label>
         <div class="col-sm-10">
             <input type="number" class="form-control" id="inputRollNo" name="rollNo" placeholder="123456">
         </div>
     </div>
     <div class="form-group row">
        <label for="name" class="text-dark col-sm-2 col-form-label">Student Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputName" name="studentName" placeholder="John Smith">
        </div>
    </div>
     <div class="form-group row justify-content-center mb-3 add-btn">
        <div class="col-sm-12 ">
          <button type="submit" class="btn btn-primary rounded-pill update mr-2">Search</button>
          <button type="reset" class="btn btn-secondary rounded-pill ml-2">Clear</button>
        </div>
    </div>
</div>
</form>
</div>
</div>
<!--Include footer-->
<%- include('include/_footer')%>
<!--/Include footer-->