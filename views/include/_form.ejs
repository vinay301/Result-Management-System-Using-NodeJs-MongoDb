 <!-- form handling -->
 <form action="/api/students" method="POST" id="addStudent">
    <div class="add-student">
     <div class="form-group row">
         <label for="name" class="text-dark col-sm-2 col-form-label">Student Name</label>
         <div class="col-sm-10">
             <input type="hidden" name="id" value="">
             <input type="text" class="form-control" id="inputName" name="studentName" placeholder="John Smith">
         </div>
     </div>

     <div class="form-group row">
         <label for="rollno" class="text-dark col-sm-2 col-form-label">Roll No.</label>
         <div class="col-sm-10">
             <input type="number" class="form-control" id="inputRollNo" name="rollNo" placeholder="123456">
         </div>
     </div>

     <div class="form-group row">
         <label for="dob" class="text-dark col-sm-2 col-form-label">Date Of Birth</label>
         <div class="col-sm-10">
             <input type="date" class="form-control" id="inputdob" name="Dob" placeholder="01-01-0000">
         </div>
     </div>

     <div class="form-group row">
         <label for="score" class="text-dark col-sm-2 col-form-label">Score</label>
         <div class="col-sm-10">
             <input type="number" class="form-control" id="inputScore" name="score" placeholder="500">
         </div>
     </div>

     <div class="form-group row add-btn">
         <div class="col-sm-10">
           <button type="submit" class="btn btn-primary rounded-pill update">Submit</button>
           <button type="reset" class="btn btn-secondary rounded-pill">Clear</button>
         </div>
       </div>

    </div>
 </form> 

  