
<!--Include header-->
<%- include('include/_header')%>
<!--/Include header-->

 <!--Add Students Section and Show Students Section-->
    <!--Main site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter mt-4">
                <a href="/teacher" class="btn border-shadow rounded-pill"><span class="text-gradient"><i class="fa-solid fa-backward"></i> All Students</span></a>
                </div>
            </div>

            <div class="form-title text-center">
                <h2 class="text-dark">Update Student Details</h2>

            </div>
       <!--form handling-->
 <form method="post" id="updateStudent">
    <div class="add-student">
     <div class="form-group row">
         <label for="name" class="text-dark col-sm-2 col-form-label">Student Name</label>
         <div class="col-sm-10">
             <input type="hidden" name="id" value="<%= student._id %>">
             <input type="text" class="form-control" id="inputName" value="<%= student.studentName %>" name="studentName" placeholder="John Smith">
         </div>
     </div>

     <div class="form-group row">
         <label for="rollno" class="text-dark col-sm-2 col-form-label">Roll No.</label>
         <div class="col-sm-10">
             
             <input type="number" class="form-control" id="inputRollNo" value="<%= student.rollNo %>" name="rollNo" placeholder="123456">
         </div>
     </div>

     <div class="form-group row">
         <label for="dob" class="text-dark col-sm-2 col-form-label">Date Of Birth</label>
         <div class="col-sm-10">
            
             <input type="date" class="form-control" id="inputdob" value="<%= student.Dob %>" name="Dob" placeholder="01-01-0000">
         </div>
     </div>

     <div class="form-group row">
         <label for="score" class="text-dark col-sm-2 col-form-label">Score</label>
         <div class="col-sm-10">
             
             <input type="number" class="form-control" id="inputScore" value="<%= student.score %>" name="score" placeholder="500">
         </div>
     </div>

     <div class="form-group row add-btn">
         <div class="col-sm-10">
           <button type="submit" class="btn btn-primary rounded-pill update">Submit</button>
           <button type="reset" class="btn btn-secondary rounded-pill">Clear</button>
         </div>
       </div>

    </div>
 </form>
       
    </div>
    </main>
    <!--/main-site-->

<!--Include footer-->
<%- include('include/_footer')%>
<!--/Include footer-->
